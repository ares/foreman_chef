<% title _('Salt Environments') %>

<% #title_actions button_group(display_link_if_authorized(_('New Salt Environment'), hash_for_new_chef_environment_path)) %>

<table class="table table-bordered table-striped">
  <tr>
    <th><%= sort :name, :as => s_('ChefEnvironment|Name') %></th>
    <th><%= sort :host, :as => _('Hosts'), :default => 'DESC'  %></th>
    <th><%= sort :hostgroup, :as => _('Host groups'), :default => 'DESC' %></th>
    <th></th>
  </tr>
  <% for chef_environment in @chef_environments %>
    <tr>
      <td><%=link_to_if_authorized h(chef_environment.name), hash_for_edit_chef_environment_path(:id => chef_environment).merge(:auth_object => chef_environment, :authorizer => authorizer) %></td>
      <td><% # link_to_if_authorized(chef_environment.chef_modules.count, hash_for_chef_modules_path(:search => "environment = #{chef_environment}")) %></td>
      <td><%= link_to_if_authorized(chef_environment.hosts.count, hash_for_hosts_path(:search => "chef_environment = #{chef_environment}")) %></td>
      <td><%= link_to_if_authorized(chef_environment.hostgroups.count, hash_for_hostgroups_path(:search => "chef_environment = #{chef_environment}")) %></td>
      <td>
        <% #action_buttons(display_delete_if_authorized(hash_for_chef_environment_path(:id => chef_environment).merge(:auth_object => chef_environment, :authorizer => authorizer),
           #                                             :confirm => _('Delete %s?') % chef_environment.name)) %>
      </td>
    </tr>
  <% end %>
</table>

<%= page_entries_info @chef_environments %>
<%= will_paginate @chef_environments %>
